<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="MainController">
   <center>
       <AnchorPane prefWidth="640.0">
           <cursor>
               <Cursor fx:constant="DISAPPEAR"/>
           </cursor>
           <TextArea fx:id="textArea" editable="false" prefHeight="339.0" prefWidth="620.0"
                     style="-fx-control-inner-background:#FFFFFF;" wrapText="true"
                     AnchorPane.bottomAnchor="8.0" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10"
                     AnchorPane.topAnchor="10">
           </TextArea>
       </AnchorPane>
   </center>
   <top>
       <MenuBar BorderPane.alignment="CENTER">
           <Menu mnemonicParsing="false" text="Hra">
               <MenuItem mnemonicParsing="false" onAction="#createNewGame" text="Nová hra"/>
               <MenuItem mnemonicParsing="false" onAction="#showHelp" text="Nápověda"/>
           </Menu>
       </MenuBar>
   </top>
   <bottom>
       <AnchorPane prefHeight="100.0" prefWidth="640.0">
           <GridPane layoutY="18.0" prefHeight="78.0" prefWidth="620.0" AnchorPane.bottomAnchor="10"
                     AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="18.0">
               <columnConstraints>
                   <ColumnConstraints hgrow="SOMETIMES" maxWidth="550" minWidth="10.0" prefWidth="480"/>
                   <ColumnConstraints hgrow="SOMETIMES" maxWidth="300" minWidth="10.0" prefWidth="140"/>
               </columnConstraints>
               <rowConstraints>
                   <RowConstraints maxHeight="39.0" minHeight="10.0" prefHeight="36.0" vgrow="SOMETIMES"/>
                   <RowConstraints maxHeight="52.0" minHeight="10.0" prefHeight="52.0" vgrow="SOMETIMES"/>
               </rowConstraints>
               <Label fx:id="directions" prefHeight="17.0" prefWidth="467.0" text="Směry: " GridPane.columnIndex="0"
                      GridPane.rowIndex="0" GridPane.valignment="CENTER"/>
               <TextField fx:id="textField" GridPane.rowIndex="1"/>
               <Button onAction="#executeCommand" text="Proveď" textAlignment="CENTER" GridPane.columnIndex="1"
                       GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER"/>
               <GridPane GridPane.columnIndex="1" GridPane.rowIndex="0">
                   <columnConstraints>
                       <ColumnConstraints hgrow="SOMETIMES" maxWidth="35.0" minWidth="10.0" prefWidth="35.0"/>
                       <ColumnConstraints hgrow="SOMETIMES" maxWidth="20.0" minWidth="10.0" prefWidth="20.0"/>
                       <ColumnConstraints hgrow="SOMETIMES" maxWidth="20.0" minWidth="10.0" prefWidth="20.0"/>
                       <ColumnConstraints hgrow="SOMETIMES" maxWidth="20.0" minWidth="10.0" prefWidth="20.0"/>
                       <ColumnConstraints hgrow="SOMETIMES" maxWidth="28.0" minWidth="10.0" prefWidth="30.0"/>
                       <ColumnConstraints hgrow="SOMETIMES" maxWidth="25.0" minWidth="10.0" prefWidth="25.0"/>
                   </columnConstraints>
                   <GridPane.margin>
                       <Insets bottom="-1.0" left="-1.0" right="-1.0" top="-1.0"/>
                   </GridPane.margin>
                   <rowConstraints>
                       <RowConstraints/>
                   </rowConstraints>
                   <Label prefHeight="25.0" prefWidth="30.0" snapToPixel="false" text="Věci:"
                          GridPane.columnIndex="0" GridPane.valignment="CENTER"/>
                   <ImageView fx:id="chisel" opacity="0.3" preserveRatio="true" GridPane.columnIndex="1"
                              GridPane.valignment="CENTER"/>
                   <ImageView fx:id="hammer" opacity="0.3" preserveRatio="true" GridPane.columnIndex="2"
                              GridPane.valignment="CENTER"/>
                   <ImageView fx:id="wallpaper" opacity="0.3" preserveRatio="true" GridPane.columnIndex="3"
                              GridPane.valignment="CENTER"/>
                   <Label fx:id="cigaretteCount" alignment="CENTER_RIGHT" contentDisplay="RIGHT"
                          prefHeight="17.0" prefWidth="28.0" snapToPixel="false" text="0" textAlignment="RIGHT"
                          GridPane.columnIndex="4" GridPane.valignment="CENTER"/>
                   <ImageView fx:id="cigarette" preserveRatio="true" GridPane.columnIndex="5"
                              GridPane.halignment="RIGHT" GridPane.valignment="CENTER"/>
               </GridPane>
           </GridPane>
       </AnchorPane>
   </bottom>
</BorderPane>
